# King's Choice Discord Bot Configuration
# Copy this file to .env and fill in your values

# Discord Bot Token (required)
DISCORD_BOT_TOKEN=your_discord_bot_token_here

# Database Path (optional, defaults to kings_choice.db)
DATABASE_PATH=../kings_choice.db

# Bot Settings
BOT_PREFIX=!kc
ADMIN_ROLE=Admin
MODERATOR_ROLE=Moderator

# Language Settings
DEFAULT_LANGUAGE=en
AUTO_TRANSLATE=true

# Logging
LOG_LEVEL=INFO

# Feature Flags
ENABLE_ROTATION_LOGIC=true
ENABLE_AUTO_ANNOUNCEMENTS=true
ENABLE_GUIDE_SYSTEM=true
ENABLE_BLACKLIST=true

# Command Settings
COMMAND_COOLDOWN=3