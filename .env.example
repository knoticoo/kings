# King's Choice Management App Environment Configuration
# Copy this file to .env and update the values as needed

# Database Configuration
# Main application database path (stores users and global data)
# KINGS_CHOICE_MAIN_DB_PATH=/path/to/your/main/kings_choice.db

# User databases directory (stores individual user data)
# KINGS_CHOICE_DB_PATH=/path/to/your/user_databases

# VPS Configuration (legacy - use the above paths instead)
# KINGS_CHOICE_VPS=true

# Flask Configuration
SECRET_KEY=your-secret-key-here-change-in-production

# Discord Bot Configuration (optional)
DISCORD_BOT_TOKEN=your-discord-bot-token
DISCORD_CHANNEL_ID=your-discord-channel-id

# Telegram Bot Configuration (optional)
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_CHAT_ID=your-telegram-chat-id

# Default Language
DEFAULT_LANGUAGE=ru

# Development Settings
FLASK_ENV=production
FLASK_DEBUG=False